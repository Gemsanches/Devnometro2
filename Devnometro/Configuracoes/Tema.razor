@code {
    [Parameter]
    public Configuracao? janela { get; set; }

    private int _selecionado;
    private int Selecionado 
    {
        get => _selecionado;
        set
        {
            _selecionado = value;
            switch (value)
            {
                case 2:
                    TemaSelecionado = new();
                    break;
                case 3:
                    TemaSelecionado = TemaTeal;
                    break;
                case 4:
                    TemaSelecionado = TemaMono;
                    break;
                default:
                    TemaSelecionado = TemaPadrao;
                    break;
            }
        }
    }
    private bool temaEscuro;

    MudTheme TemaSelecionado = new();

    MudTheme TemaPadrao = new MudTheme()
        {
            PaletteLight = new PaletteLight()
            {
                Primary = Colors.Blue.Default,
                Secondary = Colors.Green.Accent4,
                AppbarBackground = Colors.Red.Default,
            },
            PaletteDark = new PaletteDark()
            {
                Primary = Colors.Blue.Lighten1
            }
        };

    MudTheme TemaTeal = new MudTheme()
        {
            PaletteLight = new PaletteLight()
            {
                Primary = Colors.Blue.Default,
                Secondary = Colors.Green.Accent4,
                AppbarBackground = Colors.Red.Default
            },
            PaletteDark = new PaletteDark()
            {
                Primary = Colors.Blue.Lighten1
            }
        };

    MudTheme TemaMono = new MudTheme()
        {
            PaletteLight = new PaletteLight()
            {
                Primary = Colors.Blue.Default,
                Secondary = Colors.Green.Accent4,
                AppbarBackground = Colors.Red.Default,
            },
            PaletteDark = new PaletteDark()
            {
                Primary = Colors.Blue.Lighten1
            }
        };
}
